<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neucrack.gimbal.FragmentWiFiSettings">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:orientation="horizontal"
             android:weightSum="10">
             <EditText
                 android:layout_weight="8"
                 android:layout_width="0dp"
                 android:layout_height="50dp"
                 android:id="@+id/webview_addr"
                 android:text="192.168.5.1"/>
             <Button
                 android:layout_weight="2"
                 android:layout_width="0dp"
                 android:background="@drawable/ripple_bg_button"
                 android:textColor="#ffffff"
                 android:layout_height="wrap_content"
                 android:text="打开"
                 android:id="@+id/button_wifi_settings_open"/>
         </LinearLayout>
        <WebView
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:id="@+id/webview_wifi_settings"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
